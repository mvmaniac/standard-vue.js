{
  "env": {
    "browser": true,
    "node": true,
    "es2020": true
  },
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended",
    "plugin:prettier/recommended",
    "prettier/vue"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "import",
    "vue",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["error"],
    "no-unused-vars": ["warn"]
  },
  "settings": {
    "import/resolver" : {
      "alias" : {
        "map": [
          ["@","./src"]
        ], 
        "extensions": [".js", ".vue"]
      } 
    }
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/*.{j,t}s?(x)",
        "**/tests/unit/**/*.spec.{j,t}s?(x)"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
